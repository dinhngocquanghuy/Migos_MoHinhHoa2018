      var user = JSON.parse(localStorage.getItem("user"));
      window.onload = function(e){
        var user = JSON.parse(localStorage.getItem('user'));
        console.log(user);
        var id = user.id;
        console.log(id);
        $('#postBook').attr('action','/seller/api/postProducts/' + id);
